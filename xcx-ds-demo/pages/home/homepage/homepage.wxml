<view>
    <view class="index-banner">
        <swiper indicator-dots="true" autoplay="false" interval="3000" duration="1000" circular="true">
            <block wx:for="{{bannerList}}" wx:key="{{index}}">
                <swiper-item>
                    <image mode='scaleToFill' src="{{item.bannerUrl}}" class="slide-image" />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="index-category">
        <block wx:for="{{categoryList}}" wx:key="{{index}}">
            <navigator url='{{item.cUrl}}'>
                <view><image src="{{item.cImg}}" /></view>
                <view>{{item.cName}}</view>
            </navigator>
        </block>
    </view>
</view>